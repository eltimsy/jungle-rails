

<%= form_for :user, url: '/users' do |f| %>
<table class="table table-striped">
  <h1>Signup!</h1>
  <tr>
    <th>First Name:</th><td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>Last Name:</th><td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <th>Email:</th><td> <%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>Password:</th><td> <%= f.password_field :password %></td>
  </tr>
  <tr>
    <th>Password Confirmation:</th><td> <%= f.password_field :password_confirmation %></td>
  </tr>

</table>
<%= f.submit "Submit", class:"btn btn-success" %>
<% end %>
